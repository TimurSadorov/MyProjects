                </div>
            }
        </div>
    </div>
    @if(!Model.IsGuest)
    {
        <a href="@EditingProfile.PathToPage" type="button" class="btn btn-outline-info">
            Редактировать профиль
        </a>
    }
    else
    {
        var displayForSub = !Model.IsSubscriber ? "" : "none";
        var displayForUnsub = Model.IsSubscriber ? "" : "none";
        <button  type="button" class="btn btn-outline-success" id="subscribe_btn" style="display: @displayForSub">
            Подписаться
        </button>
        <button  type="button" class="btn btn-outline-danger" id="unsubscribe_btn" style="display: @displayForUnsub">
            Отписаться
        </button>
    }
</div>