                        }
                        @if (!string.IsNullOrEmpty(contacts.YoutubeLink))
                        {
                            <a href="@contacts.YoutubeLink" class="profile-contact" target="_blank">
                                <div class="d-flex flex-row align-items-center">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 50 50"
                                        width="30px"
                                        height="30px">
                                        <path
