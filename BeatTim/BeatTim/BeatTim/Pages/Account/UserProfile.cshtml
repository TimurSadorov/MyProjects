@model UserAccount
@{
    var userProfile = Model.UserProfile;
}

<div class="d-flex flex-column align-items-center">
    <div class="card border-dark mb-3 profile" style="width: 25rem">
        @{
            if (!string.IsNullOrEmpty(userProfile.UserPhotoLink))
            {
                <img src="@userProfile.UserPhotoLink" class="card-img-top profile" alt="фотка пользователя"/>
            }
            else
            {
                <img src="/img/user_photo/default.jpg" class="card-img-top profile" alt="фотка пользователя"/>
            }
        }
        <div class="card-body profile">
            <div>
                <h5 class="card-text">Никнейм</h5>
                <p>@userProfile.Nickname</p>
            </div>
            @if (!string.IsNullOrEmpty(userProfile.City))
            {
                <div>
                    <h6 class="card-text">Город</h6>
                    <p>@userProfile.City</p>
                </div>
            }
            @if (!string.IsNullOrEmpty(userProfile.AboutMe))
            {
                <div>
                    <h6 class="card-text">Обо мне</h6>
                    <p>@userProfile.AboutMe</p>
                </div>
            }
            @if (userProfile.Contact is not null)
            {
                var contacts = userProfile.Contact;
                <div>
                    <h6 class="card-text">Контакты</h6>
                    <div class="d-inline-flex flex-column">
                        @if (!string.IsNullOrEmpty(contacts.VkLink))
                        {
                            <a href="@contacts.VkLink" class="
                            profile-contact
                            d-inline-flex
                            flex-row
                            align-items-center
                          "
                               target="_blank">
