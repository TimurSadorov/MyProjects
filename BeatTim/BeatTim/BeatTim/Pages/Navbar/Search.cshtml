@page
@model BeatTim.Pages.Navbar.Search


<div class="container-xl">
    <div class="d-flex flex-column mt-4">
        <span class="fs-5">Поиск по:</span>
        <div class="mt-2">
            <div class="form-check form-switch">
                <input id="checkbox_beats" class="form-check-input" type="checkbox" checked>
                <label class="form-check-label">Битам</label>
            </div>
            <div class="form-check form-switch">
                <input id="checkbox_beatmakers" class="form-check-input" type="checkbox" checked>
                <label class="form-check-label">Битмарям</label>
            </div>
        </div>
        <div class="d-flex mt-4">
            <input class="w-60px" placeholder="Введите, например, название бита, который хотите найти" id="global_search_input"/>
            <button class="btn btn-outline-secondary ms-5" id="global_search_btn">Найти</button>
        </div>
        <span id="message_error" class="text-danger mt-2"></span>
        <div id="container_result_search" class="row row-cols-4 mt-5">
        </div>
    </div>
</div>
@{ await Html.RenderPartialAsync("Partials/Player");}
<form method="post" hidden></form>
@section Scripts
{
    <script src="~/js/player.js"></script>
    <script src="~/js/publicSearch.js"></script>
}
