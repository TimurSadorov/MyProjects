@page
@model BeatTim.Pages.Entry

@{
    Layout = null;
    ViewData["Title"] = "Вход";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Вход</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

<body>
<div class="container-xl registration">
    <div class="registration_content">
        <h2 class="registration_head">Войти</h2>
        <form method="post" class="registration_content">
            <div class="form-group registration">
                <label>Логин</label>
                <input type="text" class="form-control" asp-for="AuthorizationDto.Login" placeholder="Логин"/>
                <span asp-validation-for="AuthorizationDto.Login"/>
                <span hidden=""></span>
            </div>
            <div class="form-group registration">
                <label>Пароль</label>
                <input type="password" class="form-control" asp-for="AuthorizationDto.Password" placeholder="Пароль"/>
            </div>
            <div class="form-group registration align-self-start">
                <span asp-validation-for="AuthorizationDto.Password"></span>
                @Html.ValidationMessageFor(model => model.AuthorizationDto)
            </div>
            <div class="form-group registration">
                <input type="checkbox" asp-for="AuthorizationDto.RememberMe" id="registration_checkbox" value="false"/> Запомнить меня
                <span asp-validation-for="AuthorizationDto.RememberMe"/>
            </div>
            <button type="submit" class="btn btn-primary registration">
                Войти
            </button>
        </form>
        <a href="@Registration.PathToPage" class="already_have_account">Нет аккаунта?</a>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js"></script>
</body>

</html>