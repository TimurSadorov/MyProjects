@page
@model BeatTim.Pages.Registration

@{
    Layout = null;
    ViewData["Title"] = "Регистрация";
}

<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <title>Регистрация</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

<body>
<div class="container-xl registration">
    <div class="registration_content">
        <h2 class="registration_head">Регистрация</h2>
        <form method="post" class="registration_content">
            <div class="form-group registration">
                <label >Никнейм</label>
                <input type="text" class="form-control" asp-for="RegistrationDto.Nickname" placeholder="Введите никнейм"/>
                <span asp-validation-for="RegistrationDto.Nickname"/>
            </div>
            <div class="form-group registration">
                <label>Логин</label>
                <input type="text" class="form-control" asp-for="RegistrationDto.Login" placeholder="Логин"/>
                <span asp-validation-for="RegistrationDto.Login"/>
                 @Html.ValidationMessageFor(model => model.RegistrationDto)
            </div>
            <div class="form-group registration">
                <label>Пароль</label>
                <input type="password" class="form-control" asp-for="RegistrationDto.Password" placeholder="Пароль"/>
                <span asp-validation-for="RegistrationDto.Password"/>
            </div>
            <div class="form-group registration">
                <label>Повторите пароль</label>
                <input type="password" class="form-control" asp-for="RegistrationDto.RepeatedPassword" placeholder="Повторите пароль"/>
                <span asp-validation-for="RegistrationDto.RepeatedPassword"/>
            </div>
            <div class="form-group registration">
                <input type="checkbox" asp-for="RegistrationDto.RememberMe" id="registration_checkbox" value="false"/> Запомнить меня
                <span asp-validation-for="RegistrationDto.RememberMe"/>
            </div>
            <button type="submit" class="btn btn-primary registration">
                Зарегистрироваться
            </button>
        </form>
        <a href="@Entry.PathToPage" class="already_have_account">Уже есть аккаунт?</a>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js"></script>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
</body>

</html>